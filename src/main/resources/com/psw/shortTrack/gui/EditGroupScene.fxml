<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="500.0" minWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.psw.shortTrack.gui.ControllerEditGroupScene">
   <center>
      <VBox maxHeight="-Infinity" maxWidth="556.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Group Name">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <TextField fx:id="groupNameField">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <Label text="Member List">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <ListView prefHeight="200.0" prefWidth="200.0" />
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="memberTextField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="ex: member1@email.com" HBox.hgrow="ALWAYS" />
                  <Button maxHeight="1.7976931348623157E308" maxWidth="100.0" mnemonicParsing="false" onAction="#add" text="Add" HBox.hgrow="ALWAYS" />
                  <Button maxHeight="1.7976931348623157E308" maxWidth="100.0" mnemonicParsing="false" onAction="#remove" text="Remove" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Label fx:id="notificationLabel" visible="false">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <HBox alignment="CENTER" spacing="40.0">
               <children>
                  <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#delete" style="-fx-background-color: #ff5400; -fx-text-fill: white;" text="Delete" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
                  <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#cancel" style="-fx-background-color: #395cab; -fx-text-fill: white;" text="Cancel" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
                  <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#save" style="-fx-background-color: #80c800; -fx-text-fill: white;" text="Save" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
