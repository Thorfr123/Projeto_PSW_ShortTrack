                           <children>
                              <HBox spacing="10.0">
                                 <children>
                                    <TextField fx:id="newListName" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#addList" promptText="New List Name" HBox.hgrow="ALWAYS">
